@using Tutel.EduWork.BusinessLayer.Abstractions
@using Tutel.EduWork.BusinessLayer.DTOs

@inject NavigationManager NavigationManager

<h3>Prikaz projekata</h3>

<button class="btn btn-success mb-3" @onclick="NavigateToAddPage">Dodaj novi projekt</button>

@if (projects == null)
{
	<p><em>Loading...</em></p>
} else
{
	<h3>Prikaz projekata</h3>
	<table class="table">
		<thead>
			<tr>
				<th>Naziv projekta</th>
				<th>Opis</th>
				<th>Aktivan</th>
				<th>Naplaćen</th>
				<th>Akcije</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var project in projects)
			{
				<tr>
					<td>@project.Name</td>
					<td>@project.Description</td>
					<td>@project.IsActive</td>
					<td>@project.IsBillable</td>
					<td><button type="button" class="btn btn-primary">Uredi</button>
						<button type="button" class="btn btn-primary">Obriši</button>
					</td>
				</tr>
			}
		</tbody>
	</table>
}

@inject IProjectService projectService
@code {
	private List<ProjectDTO> projects;

	protected override async Task OnInitializedAsync()
	{
		projects = await projectService.GetAllAsync();
	}

	private void NavigateToAddPage()
	{
		NavigationManager.NavigateTo("/addproject");
	}
}
