<div class="container workSession-element p-1">
    <div class="row mt-2 mb-4 pt-1">
        <div class="col-8 col-md-6 d-flex align-items-center">
            <div class="ms-2 titleText">
                @Name
            </div>
        </div>
        <div class="col-4 col-md-6 d-flex justify-content-end align-items-center">
            <div class="me-2 timeRangeText">
                @TimeRange
            </div>
        </div>
    </div>
    <div class="row mb-4">
        <div class="col-8 col-md-6 d-flex align-items-center">
            <div class="ms-2 subjectText">
                @Subject
            </div>
        </div>
        <div class="col-4 col-md-6 d-flex justify-content-end align-items-center">
            <div class="me-2">
                <button type="submit" class="btn btn-primary" @onclick="@(() => GoToEditWorkSessions(WorkSessionId))">Uredi</button>
            </div>
        </div>
    </div>
</div>

@inject NavigationManager NavigationManager;
@code {
    [Parameter]
    public string Name { get; set; }

    [Parameter]
    public string TimeRange { get; set; }

    [Parameter]
    public string Subject { get; set; }

    [Parameter]
    public int WorkSessionId { get; set; }

    private void GoToEditWorkSessions(int workDayId)
    {
        NavigationManager.NavigateTo($"/editworksession/{workDayId}");
    }
}